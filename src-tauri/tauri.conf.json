{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BiliMusic",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "window":{
        "all":true,
        "show":true,
        "setFocus": true,
        "requestUserAttention": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.emoing",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label":"main",
        "fullscreen": false,
        "resizable": true,
        "title": "bilimusic",
        "width": 800,
        "height": 600
      }
    ]
  }
}
